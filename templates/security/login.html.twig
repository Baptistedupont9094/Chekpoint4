{% extends '_layoutUser.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
<h1 class="my-4 h1 text-center text-secondary">
    Connexion
</h1>
<div class="card bg-secondary thext-light p-3">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">Le compte n'existe pas ou le mot de passe est incorrect</div>
        {% endif %}

        <label for="inputEmail" class="text-light m-2">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label for="inputPassword" class="text-light m-2">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-secondary border mt-3" type="submit">
            Valider
        </button>
    </form>
</div>
{% endblock %}
